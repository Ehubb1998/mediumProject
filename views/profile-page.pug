extends layout.pug

block content
  body
    include includes/navigation
    .pPoutermost
      .pPbanner
        .pPbannerContent
          .pPprofileContainer
            .pPprofile
              .pPuserName= user.userName
              .pPbio= user.bio
                   .pPfollowers #{user.followers} Followers •  Following #{user.Articles.length*321} • #{user.Articles.length} Posts
          .pPpictureContainer
            img.pPkanye(src="https://www.biography.com/.image/ar_1:1%2Cc_fill%2Ccs_srgb%2Cg_face%2Cq_auto:good%2Cw_300/MTU0OTkwNDUxOTQ5MDUzNDQ3/kanye-west-attends-the-christian-dior-show-as-part-of-the-paris-fashion-week-womenswear-fall-winter-2015-2016-on-march-6-2015-in-paris-france-photo-by-dominique-charriau-wireimage-square.jpg", alt="hopefully a pic")
            .pPfollowButtonContainer
              button.followButton(type="button") Follow #{user.userName}
      .pPsubBanner
        if user.Articles
          .pParticlesContainer
              each article in user.Articles
                  .pParticleContainer
                      a.pPlink(href=`http://localhost:8080/articles/${article.id}`)
                          h1.pPtitle= article.title
                          .pPdate #{article.createdAt}
                          .pPclaps #{article.claps} Claps
                      .pPoverflowDiv
                          h5.pParticle= article.body
                          a.pPreadMore(href=`http://localhost:8080/articles/${article.id}`) Read More
  script(src="/js/index-articles.js")
  script(src="/js/profile.js")
